<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yabi.yabiuserandroid.fragments.SplashFragment"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_logo"
            android:src="@mipmap/ic_launcher"
            android:background="@android:color/transparent"
            android:visibility="invisible"
            android:layout_gravity="center"/>
        <com.yabi.yabiuserandroid.ui.uiutils.palette.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margins_20"
            android:textSize="25sp"
            android:visibility="invisible"
            android:id="@+id/text_restaurant_name"
            android:textColor="@color/color_primary"
            android:textStyle="bold"
            android:text="@string/app_name"
            android:gravity="center"
            android:layout_gravity="center"
            />
        <com.yabi.yabiuserandroid.ui.uiutils.palette.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please wait while we are setting up thing for you"
            android:textSize="14sp"
            android:visibility="invisible"
            android:layout_marginLeft="@dimen/margins_20"
            android:layout_marginRight="@dimen/margins_20"
            android:layout_marginStart="@dimen/margins_20"
            android:layout_marginEnd="@dimen/margins_20"
            android:id="@+id/text_setting_up_things"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>

</RelativeLayout>
